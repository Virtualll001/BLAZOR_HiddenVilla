@page "/hriste"
<style>
    body {
        background-color: #FDFDE9;
    }
</style>



<div class="container text-center pt-4">
    <h1>HŘIŠTĚ</h1>
    <i>"BLAZOR - testováno na dětech..."</i>
    <br /><br />
</div>

<div class="container border text-center">
     <div class="row">
        <div class="col-12 text-center ">
            <span style="font-size:4em">Počítáme se slony</span>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="text-center pb-3">
                <span style="font-size:1.5em">0-10 slonů</span><br />
                <input type="number" min="0" max="10" class="btn btn-warning" style="width:5em; font-size:2em" @bind-value="SlonModry" />
            </div>
            @for (var i = SlonModry; i > 0; i--)
            {
                <img src="images/slonModry.gif" alt="slon" width="100px" />
                <span>&nbsp;</span>
            }
        </div>
        <div class="col-6">
            <div class="text-center pb-3">
                <span style="font-size:1.5em">0-10 slonů</span><br />
                <input type="number" min="0" max="10" class="btn btn-warning" style="width:5em; font-size:2em" @bind-value="SlonRuzovy" />
            </div>
            @for (var i = SlonRuzovy; i > 0; i--)
            {
                <img src="images/slonRuzovy.gif" alt="slon" width="100px" />
                <span>&nbsp;</span>
            }
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-12 text-center">
            <span style="font-size:7em">@SlonModry + @SlonRuzovy = @SoucetSlonu</span>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public int SlonModry { get; set; } = 1;
    [Parameter]
    public int SlonRuzovy { get; set; } = 1;
    [Parameter]
    public int SoucetSlonu   // property
    {
        get { return SlonModry + SlonRuzovy; }
        set { }
    }



}
